<form action="/figures" method="post">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  
  <label><h4>Titles</h4></label>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>

    <% end %>
 <label><h4>Create New Title:</h4></label>
  <input type="text" id="new_title" name="title[name]">
  
  <label for="landmarks">Landmarks</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.name %>">
  <% end %>
  
  <label for="new_landmark">Create New Landmark:</label>
  <label>Name:</label> 
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label>  
  <input type="text" name="landmark[year_completed]" id="new_landmark">
  
  <input type="submit" value="Create New Figure">
</form>

