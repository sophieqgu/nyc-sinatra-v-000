<form action="/figures/<%= @figure.id %>" method = "post">
  
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  
  <label>Edit Titles</label>
  <% @titles.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>>
  <% end %>
  
  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  
  <label>Edit Landmarks</label>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
  <% end %>
  
  <label>Create New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]" id="new_landmark">
  
  <input type="submit" value="Edit Figure">
</form>