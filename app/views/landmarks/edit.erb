<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method = "post">
  
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <label for="landmark_name">Name</label>
  <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>">
  
  <label for="landmark_year_completed">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%= @landmark.year_completed %>">

  
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
