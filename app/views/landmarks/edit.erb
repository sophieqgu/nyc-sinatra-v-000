<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method = "post">
  
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <label for="landmark_name">Name</label>
  <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>">
  
  <label>Edit Figure</label>
  <% @titles.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>>
  <% end %>
  
  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  
  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
