<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method = "post">
  
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <label for="landmark_name">Name</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
  
  <label for="landmark_year_completed">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">

  <label>Figure</label>
  <% @figures.each do |figure| %>
    <label><%= figure.name %></label>
    <input type="radio" name="landmark[figure_id]" id="<%= figure.id %>" value="<%= figure.id %>" <%= "checked" if @landmark.figure == figure %>>
  <% end %>
  
  <label>Create New Figure:</label>
  <input type="text" name="figure[name]" id="new_figure">
  
  
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
